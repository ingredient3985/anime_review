<h1>編集</h1>
<%= form_with model:@book,local:true,method:"patch" do |f|%>
<div class="form-group">
<label>タイトル</label>
<%= f.text_field :title ,class:"form-control"%>
</div>
<div class="form-group">
<label>点数(100点満点中)</label>
<%= f.number_field :review ,class:"form-control"%>
</div>
<div class="form-group">
<label>本文</label>
<%= f.text_area :content ,class:"form-control",rows:20 %>
</div>
<%= f.submit "更新" ,class:"btn btn-primary"%>
<%= link_to "戻る", books_path ,class:"btn btn-secondary"%>
<% end %>